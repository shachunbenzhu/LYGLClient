<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle" >
    
    <!-- 实心填充 -->
    <solid android:color="@drawable/white" />
    
    <!-- 边角的圆弧半径 -->
    <corners android:radius="25px" />
    
    <!-- 描边：一般大小都是1dp -->
    <stroke android:color="@drawable/black" android:width="2px"/>
    
    <!-- 四周留出来的空白,和xml文件中的padding效果一样，对内起作用 -->
    <padding
        android:bottom="1dp"
        android:left="10dp"
        android:right="10dp"
        android:top="1dp" />	    
</shape>

