<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
	android:background="#ffffff"
    tools:context=".MyNoteActivity"
    android:orientation="vertical">
    
    <RelativeLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="7dp">
		<Button 
            android:id="@+id/bt_mynote_back"
            android:layout_width="23dp"
            android:layout_height="18dp"
            android:layout_centerVertical="true"
            android:background="@drawable/common_icon_back"
            android:padding="5dp"
            android:layout_marginLeft="5dp"/>
		
        <com.cn.ncist.rq.module.TitleTextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:text="@string/wdyj"
            android:textColor="@drawable/black"
            android:textSize="25sp"
            android:padding="3dp"/>
        
        <Button 
            android:id="@+id/bt_mynote_write"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/transparent"
            android:text="@string/xyj"
            android:textSize="15sp"/>
    </RelativeLayout>
    
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:gravity="center">
        <Button 
            android:id="@+id/bt_mynote_yfb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/yfb"
            android:gravity="center"
            android:background="@drawable/shape_mynote_button"
            android:textColor="@drawable/gray1"
            android:textSize="15sp"/>
        
        <Button 
            android:id="@+id/bt_mynote_cgx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cgx"
            android:textColor="@drawable/gray1"
            android:textSize="15sp"
            android:gravity="center"
            android:layout_marginLeft="10dp"
            android:background="@drawable/shape_mynote_kbg_button"/>
        
        <Button 
            android:id="@+id/bt_mynote_dxg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dxg"
            android:textColor="@drawable/gray1"
            android:textSize="15sp"
            android:gravity="center"
            android:layout_marginLeft="10dp"
            android:background="@drawable/shape_mynote_kbg_button"/>
    </LinearLayout>
    
    <LinearLayout 
        android:id="@+id/ll_mynote_ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/gray1"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:layout_gravity="center">
        <ListView 
            android:id="@+id/lv_mynote_list"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"/>
    </LinearLayout>
	

</LinearLayout>