<RelativeLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
	android:background="#ffffff"
    tools:context=".NoteDetileActivity">
    
	<RelativeLayout 
	    android:id="@+id/rl"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:layout_marginTop="2dp"
        android:layout_alignParentTop="true">
        
        <Button 
            android:id="@+id/bt_notedetile_back"
            android:layout_width="23dp"
            android:layout_height="18dp"
            android:layout_centerVertical="true"
            android:background="@drawable/common_icon_back"
            android:padding="5dp"
            android:layout_marginLeft="5dp"/>
        
        <com.cn.ncist.rq.module.TitleTextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:text="@string/yj"
            android:textSize="25sp"
            android:padding="3dp"/>
		
        <LinearLayout 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_margin="2dp"
            android:layout_centerVertical="true">
	        <Button 
	            android:id="@+id/bt_notedetile_collection"
	            android:layout_width="23dp"
	            android:layout_height="23dp"
	            android:background="@drawable/notedetile_collection"
	            android:layout_marginRight="10dp"/>
	        
	        <Button 
	            android:id="@+id/bt_notedetile_more"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:background="@drawable/transparent"
	            android:text="@string/gd"
	            android:textSize="15sp"/>
        </LinearLayout>
        
    </RelativeLayout>
    
	<RelativeLayout 
	    android:id="@+id/rl1"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
		android:layout_alignParentBottom="true"
		android:padding="4dp"
        android:layout_marginBottom="2dp">
        <RelativeLayout 
		    android:layout_width="150dp"
		    android:layout_height="wrap_content"
			android:layout_centerHorizontal="true">
	    <RadioButton 
		    android:id="@+id/rb_notedetile_zan"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:button="@null"
			android:drawableTop="@drawable/common_zan"
			android:text="@string/zan"
			android:textColor="@drawable/black"
			android:textSize="12sp"
			android:layout_alignParentLeft="true"
			android:gravity="center"
			android:layout_margin="10dp"/>
	    
	    <RadioButton 
		    android:id="@+id/rb_notedetile_comment"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:button="@null"
			android:drawableTop="@drawable/common_comment"
			android:text="@string/pl"
			android:textColor="@drawable/black"
			android:textSize="12sp"
			android:layout_alignParentRight="true"
			android:layout_margin="10dp"/>
	    </RelativeLayout>
	    
	</RelativeLayout>
	
	<ScrollView
	    android:layout_below="@id/rl"
	    android:layout_above="@id/rl1"
		android:layout_width="fill_parent"
		android:layout_height="fill_parent" >
        <LinearLayout 
      	    android:layout_width="fill_parent"
      	    android:layout_height="wrap_content"
      	    android:orientation="vertical"
      	    android:background="@drawable/bg_qgraywhite">
	<TextView 
	    android:id="@+id/tv_notedetile_title"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:singleLine="false"
	    android:padding="10dp"
	    android:textSize="20sp"
	    android:layout_marginLeft="10dp"/>
	
	<RelativeLayout 
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:layout_marginTop="10dp">
	    <TextView 
		    android:id="@+id/tv_notedetile_date"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:padding="5dp"
		    android:textSize="13sp"
		    android:layout_centerVertical="true"
		    android:layout_marginLeft="30dp"/>
	    
	    <TextView 
		    android:id="@+id/tv_notedetile_name"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:padding="5dp"
		    android:textColor="@drawable/blueset"
		    android:textSize="13sp"
		    android:layout_centerHorizontal="true"
		    android:layout_centerVertical="true"/>
	    
	    <TextView 
		    android:id="@+id/tv_notedetile_seenum"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:textSize="13sp"
		    android:text="@string/gd"
		    android:gravity="center"
		    android:layout_centerVertical="true"
		    android:layout_alignParentRight="true"
		    android:layout_marginRight="30dp"/>
	    
	    <TextView 
		    android:id="@+id/tv_notedetile_yuedu"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:textSize="13sp"
		    android:text="@string/ydu"
		    android:gravity="right"
		    android:layout_centerVertical="true"
		    android:layout_toLeftOf="@id/tv_notedetile_seenum"/>
	</RelativeLayout>
	<LinearLayout 
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:orientation="vertical"
	    android:layout_margin="20dp"
	    android:background="@drawable/bg_qgraywhite">
	    <RelativeLayout 
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content">
	        <RadioButton 
	            android:id="@+id/rb_notedetile_xcts"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:drawableLeft="@drawable/notedetile_days"
	            android:button="@null"
	            android:text="@string/xcts"
	            android:padding="5dp"
	            android:layout_centerVertical="true"/>
	        
	        <TextView 
	            android:id="@+id/tv_notedetile_days"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_margin="2dp"
	            android:layout_toRightOf="@id/rb_notedetile_xcts"
	            android:layout_centerVertical="true"/>
	        
	        <RadioButton 
	            android:id="@+id/rb_notedetile_rjhf"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:drawableLeft="@drawable/notedetile_expend"
	            android:button="@null"
	            android:text="@string/rjhf"
	            android:padding="5dp"
	            android:layout_marginLeft="30dp"
	            android:layout_centerVertical="true"
	            android:layout_toRightOf="@id/tv_notedetile_days"/>
	        
	        <TextView 
	            android:id="@+id/tv_notedetile_expend"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_margin="2dp"
	            android:layout_toRightOf="@id/rb_notedetile_rjhf"
	            android:layout_centerVertical="true"/>
	    </RelativeLayout>
	    
	    <RelativeLayout 
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content">
	        <RadioButton 
	            android:id="@+id/rb_notedetile_hscx"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:drawableLeft="@drawable/notedetile_who"
	            android:button="@null"
	            android:text="@string/hscx"
	            android:padding="5dp"
	            android:layout_centerVertical="true"/>
	        
	        <TextView 
	            android:id="@+id/tv_notedetile_partner"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_margin="2dp"
	            android:layout_toRightOf="@id/rb_notedetile_hscx"
	            android:layout_centerVertical="true"/>
	        
	    </RelativeLayout>
	</LinearLayout>
	
	<TextView 
	    android:id="@+id/tv_notedetile_content"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:singleLine="false"
	    android:padding="5dp"
	    android:layout_margin="10dp"/>
	<ImageView 
	    android:id="@+id/iv_notedetile_bg"
	    android:layout_width="fill_parent"
	    android:layout_height="160dp"
	    android:layout_margin="10dp"/>
	<ListView 
	    android:id="@+id/lv_notedetile_img"
	    android:layout_width="fill_parent"
	    android:layout_height="160dp"
	    android:layout_margin="10dp"/>
	</LinearLayout>
	</ScrollView>
	
</RelativeLayout>