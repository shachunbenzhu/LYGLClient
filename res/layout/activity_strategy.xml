<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StrategyActivity"
    android:background="@drawable/white"
    android:orientation="vertical" >
    
    <RelativeLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="7dp"
        android:layout_marginTop="5dp">

        <Button 
            android:id="@+id/bt_strategy_back"
            android:layout_width="23dp"
            android:layout_height="18dp"
            android:layout_centerVertical="true"
            android:background="@drawable/common_icon_back"
            android:padding="5dp"
            android:layout_marginLeft="5dp"/>
        
        <com.cn.ncist.rq.module.TitleTextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:text="@string/kdgl"
            android:textColor="@drawable/black"
            android:textSize="25sp"
            android:padding="3dp"/>
        
        <Button 
            android:id="@+id/bt_strategy_search"
            android:layout_width="23dp"
            android:layout_height="18dp"
            android:background="@drawable/note_search1"
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
    
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="horizontal">
        
        <GridView 
            android:id="@+id/gv_strategy_nation"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:numColumns="1"
            android:layout_weight="2.5"
            android:background="@drawable/bg_qgraywhite"/> 
        
        <LinearLayout 
	        android:id="@+id/ll_strategy_ll"
	        android:layout_width="wrap_content"
	        android:layout_height="fill_parent"
	        android:layout_weight="1"
	        android:background="@drawable/white">
        <ListView 
            android:id="@+id/lv_strategy_des"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"/>
        </LinearLayout>
    </LinearLayout>
	

</LinearLayout>