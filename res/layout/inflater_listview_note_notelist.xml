<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:descendantFocusability="blocksDescendants">
    
    <TextView 
	    android:layout_width="fill_parent"
	    android:layout_height="10dp"
	    android:background="@drawable/bg_graywhite"/>
    
    <RelativeLayout 
        android:id="@+id/rl_notelist_note"
        android:layout_width="fill_parent"
        android:layout_height="178dp">

        <TextView
            android:textColor="@drawable/white"
            android:textStyle="bold"
			android:id="@+id/iv_note_flag"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentRight="true"
			android:layout_marginTop="10dp"
			android:gravity="center"/>
        
        <RelativeLayout 
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:layout_gravity="center_vertical|center_horizontal"
		    android:padding="5dp"
		    android:layout_marginTop="40dp"
		    android:layout_below="@id/iv_note_flag">
		    
		    <ImageView
		        android:id="@+id/iv_note_tx"
				android:layout_width="72dp"
		        android:layout_height="72dp"
		        android:layout_alignParentLeft="true"
		        android:layout_centerVertical="true"
		        android:padding="8dp"
		        android:background="@drawable/shape_touxiang_imageview"/>
		
			<com.cn.ncist.rq.module.ChildTextView
				android:id="@+id/tv_note_user"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_centerVertical="true"
				android:padding="2dp"
				android:text="@string/ttnote"
				android:textColor="@drawable/white"
				android:textStyle="bold"
				android:textSize="18sp"
				android:layout_toRightOf="@id/iv_note_tx"/>
		</RelativeLayout>
    </RelativeLayout>
    <RelativeLayout 
		android:layout_width="fill_parent"
		android:layout_height="wrap_content">
			    
		<TextView 
			android:id="@+id/tv_note_title"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:singleLine="false"
			android:textColor="@drawable/black"
			android:textSize="15sp"
			android:layout_centerVertical="true"
			android:padding="5dp"
			android:text="@string/title"
			android:layout_margin="5dp"/>
	</RelativeLayout>
	<RelativeLayout 
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:padding="5dp">
			    
		<RadioButton 
			android:id="@+id/rb_note_llnum"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:drawableLeft="@drawable/common_eye"
			android:textColor="@drawable/gray"
			android:textSize="13sp"
			android:button="@null"
			android:gravity="center_horizontal"
			android:layout_centerVertical="true"
			android:padding="3dp"/>
		<RadioButton 
			android:id="@+id/rb_note_plnum"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:drawableLeft="@drawable/common_comment"
			android:textColor="@drawable/gray"
			android:textSize="13sp"
			android:button="@null"
			android:gravity="center_horizontal"
			android:layout_centerVertical="true"
			android:layout_toRightOf="@id/rb_note_llnum"
			android:padding="3dp"
			android:layout_marginLeft="4dp"/>	
			
		<RadioButton 
			android:id="@+id/rb_note_zannum"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:drawableLeft="@drawable/common_zan"
			android:textColor="@drawable/gray"
			android:textSize="13sp"
			android:button="@null"
			android:gravity="center_horizontal"
			android:layout_centerVertical="true"
			android:layout_toRightOf="@id/rb_note_plnum"
			android:padding="3dp"
			android:layout_marginLeft="4dp"/>
		
		
		<TextView 
			android:id="@+id/tv_note_date"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textColor="@drawable/gray"
			android:textSize="15sp"
			android:layout_centerVertical="true"
			android:padding="5dp"
			android:text="@string/date"
			android:layout_margin="5dp"
			android:layout_alignParentRight="true"
			android:layout_marginRight="5dp"/>
	</RelativeLayout>
</LinearLayout>
